<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fun Facts"
        android:textStyle="bold" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I visited more than 35 countries around the world" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Among those countries, I visited Hong Kong, where I also lived in 2016" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I play soccer" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I go running" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I do have dual citizenship" />
</LinearLayout>